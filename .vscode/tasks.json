{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make PTLib (all)",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}",
                    "PKG_CONFIG_PATH": "/usr/local/opt/openssl/lib/pkgconfig"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "all"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make PTLib (debug)",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}",
                    "PKG_CONFIG_PATH": "/usr/local/opt/openssl/lib/pkgconfig"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "debugdepend",
                "debug"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make PTLib (release)",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}",
                    "PKG_CONFIG_PATH": "/usr/local/opt/openssl/lib/pkgconfig"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "optdepend",
                "opt"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean PTLib",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}",
                    "PKG_CONFIG_PATH": "/usr/local/opt/openssl/lib/pkgconfig"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "clean"
            ]
        }
    ]
}
